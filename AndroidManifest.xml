<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.waitresshelper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.waiterhelper.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.waiterhelper.RecordActivity"
            android:label="@string/title_activity_record"
            android:parentActivityName="com.example.waiterhelper.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ravenware.waitresshelper.MainActivity" />
        </activity>
        <activity
            android:name="com.example.waiterhelper.StoreActivity"
            android:label="@string/title_activity_sotre"
            android:parentActivityName="com.example.waiterhelper.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.waitresshelper.MainActivity" />
        </activity>
        <activity
            android:name="com.example.waiterhelper.ViewActivity"
            android:label="@string/title_activity_view"
            android:parentActivityName="com.example.waiterhelper.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.waitresshelper.MainActivity" />
        </activity>
        <activity
            android:name="com.example.waiterhelper.LoadActivity"
            android:label="@string/title_activity_load" >
        </activity>
    </application>

</manifest>
